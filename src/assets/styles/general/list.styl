// List ------------------------------------------------------------------------

.alm-list
  list-style none

// List Item -------------------------------------------------------------------

.alm-list-item
  width 100%
  padding size-smaller
  margin-left - size-smaller

  &:first-child
    margin-top 0

  &:nth-child(2n)
    background color-palette-purple

  &::after
    content ''
    display block
    clear both

  @media screen and (min-width: min-tablet-width)
    display table
    padding 0
    margin-left 0
    margin-top size-small

    &:nth-child(2n)
      background none

// List Item Modifiers ---------------------------------------------------------

.alm-list-item--size-big
  @media screen and (min-width: min-tablet-width)
    margin-top size-medium

// List Item Components --------------------------------------------------------

.alm-list-item-link

  &:active > *
    link-active()

  @media screen and (min-width: min-tablet-width)
    display table-row

.alm-list-item-thumb
  display none

  @media screen and (min-width: min-tablet-width)
    display table-cell
    vertical-align middle
    width avatar--size-medium

  .alm-avatar
    display block

.alm-list-item-info
  @media screen and (min-width: min-tablet-width)
    display table-cell
    vertical-align middle
    width 100%
    padding-left 2em

.alm-list-item-year
  font-family fonts-sans-bold
  color color-palette-blue

.alm-list-item-attrs
  line-height 180%

  .alm-icon
    display block
    padding-top 0

    @media screen and (min-width: min-tablet-width)
      display inline-block

      + .alm-icon
        margin-left 0.6em

.alm-list-item-with
  &::before
    text-transform lowercase

    @media screen and (min-width: min-tablet-width)
      content '~ '

    html:lang(en) &
      content 'with'

      @media screen and (min-width: min-tablet-width)
        content '~ with'

    html:lang(pt) &
      content 'com'

      @media screen and (min-width: min-tablet-width)
        content '~ com'

// List Item Title -------------------------------------------------------------

.alm-list-item-title
  margin-bottom 0.4em
  font-size 2em
  font-weight normal
  font-family fonts-sans-normal
  line-height 110%
  letter-spacing -0.03em

  @media screen and (min-width: min-tablet-width)
    font-size 2.1em

  &::after
    position absolute
    display inline-block
    width 2em
    height 2em
    line-height 2.2em
    margin 0.1em 0 0 0.8em
    font-size 0.5em
    font-family fonts-sans-bolder
    text-align center
    border-radius 50%
    background rgba(color-palette-blue, 0.8)
    color color-palette-purple-secondary

  html:lang(en) &
    &:lang(pt)
      &::after
        content 'PT'

  html:lang(pt) &
    &:lang(en)
      &::after
        content 'EN'

// List Item Title Modifiers ---------------------------------------------------

.alm-list-item-title--size-big
  font-size 2.3em
  font-family fonts-sans-light
  text-transform uppercase
  margin-bottom 0.25em

  @media screen and (min-width: min-tablet-width)
    font-size 2.6em
