// Vars ------------------------------------------------------------------------

post-header-cover-height = 260px
post-header-cover-height--expanded-mobile  = post-header-cover-height * 1.2
post-header-cover-height--expanded-desktop = post-header-cover-height * scale

// Mixins ----------------------------------------------------------------------

vertical-top()
  s('none')

vertical-bottom(height)
  s('translateY(calc(' + height + ' - 100%))')

vertical-center(height)
  s('translateY(calc(' + (height / 2) + ' - 50%))')

// Header ----------------------------------------------------------------------

.alm-post-header
  position relative

  .alm-hr
    margin-top 2.5em
    margin-bottom 0
    opacity 1

.alm-post-header-cover-box
  position relative
  width 100%
  height post-header-cover-height
  overflow hidden
  z-index 0
  transition height 0.8s ease

  &:hover
    transition-duration 1.2s
    height post-header-cover-height--expanded-mobile

    @media screen and (min-width: min-desktop-width)
      height post-header-cover-height--expanded-desktop

// Header cover ----------------------------------------------------------------

.alm-post-header-cover
  position absolute
  width 100%
  transition -webkit-transform 1.2s ease
  -webkit-transform vertical-center(post-header-cover-height)

  .alm-post-header-cover-box:hover &
    transition -webkit-transform 0.8s ease
    -webkit-transform vertical-center(post-header-cover-height--expanded-mobile)

    @media screen and (min-width: min-desktop-width)
      -webkit-transform vertical-center(post-header-cover-height--expanded-desktop)

// Header cover Modifiers ------------------------------------------------------

.alm-post-header-cover--at-top-on-ini
  -webkit-transform vertical-top()

.alm-post-header-cover--at-top-on-end
  .alm-post-header-cover-box:hover &
    -webkit-transform vertical-top()

.alm-post-header-cover--at-bottom-on-ini
  -webkit-transform vertical-bottom(post-header-cover-height)

.alm-post-header-cover--at-bottom-on-end
  .alm-post-header-cover-box:hover &
    -webkit-transform vertical-bottom(post-header-cover-height--expanded-mobile)

    @media screen and (min-width: min-desktop-width)
      -webkit-transform vertical-bottom(post-header-cover-height--expanded-desktop)

// Header cover description ----------------------------------------------------

.alm-post-header-cover-description
  margin 1em size-smallest size-smallest size-smallest
  font-size 1.6em
  line-height 170%
  color color-palette-blue

  @media screen and (min-width: min-tablet-width)
    margin-left size-medium
    margin-right size-medium
