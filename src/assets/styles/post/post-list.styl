post-list-header-cover-height = post-header-cover-height - 22
post-list-cover-transition    = transform 0.5s ease, opacity 0.5s ease

// Post Lists ------------------------------------------------------------------

.alm-post-list
  list-style none

  .alm-post-title
    background none

  .alm-post-title-content
    position static

  .alm-post-info
    display none

  .alm-post-header-cover
    opacity 0.6
    transition post-list-cover-transition

  .alm-post-header-cover-box
    height post-list-header-cover-height

    &:hover
      height post-list-header-cover-height

      .alm-post-title
        background none

      .alm-post-header-cover
        opacity 1
        transition post-list-cover-transition
        transform scale(1.04) vertical-center(post-header-cover-height)
