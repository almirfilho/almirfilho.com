// Post title ------------------------------------------------------------------

.alm-post--title
  position relative
  height 100%
  z-index 100
  background linear-gradient(transparent 40%, white 95%)

  @media screen and (min-width: min-tablet-width)
    background linear-gradient(transparent 50%, white 100%)

.alm-post--title-link
  display -webkit-flex
  display flex
  width 100%
  height 100%
  color white

.alm-post--title-str
  position relative
  top -0.3em
  margin auto
