// Color palette
color-palette-purple = #3D3042
color-palette-green  = #8BA27A
color-palette-blue   = #616988
color-palette-gray   = #CCCCCC
color-palette-white  = white

// Sizes
scale = 1.618
base-size = 60px

size-smallest = base-size / scale / scale / scale
size-smaller  = base-size / scale / scale
size-small    = base-size / scale
size-medium   = base-size
size-big      = base-size * scale
size-bigger   = base-size * scale * scale
size-biggest  = base-size * scale * scale * scale

// Imports
@import general
