// Vars ------------------------------------------------------------------------

body-desktop-width = 66em

// Functions -------------------------------------------------------------------

normalize(value, base = post-text-size)
  value / base

// General styles --------------------------------------------------------------

*
  margin 0
  padding 0

body
  color color-palette-gray
  font-size base-font-size
  font-family fonts-sans-normal
  background color-palette-purple
  -webkit-font-smoothing antialiased

a
  color color-palette-gray
  text-decoration none

// Body container --------------------------------------------------------------

.alm-body
  @media screen and (min-width: min-desktop-width)
    width body-desktop-width
    margin auto

// Components ------------------------------------------------------------------

@import 'general/content'
@import 'general/avatar'
@import 'general/titles'
@import 'general/text'
@import 'general/hr'
@import 'general/icons'
@import 'general/list'
