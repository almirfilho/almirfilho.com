body-desktop-width = 65em

*
  margin 0
  padding 0

body
  color color-palette-gray
  font-size base-font-size
  font-family fonts-sans-normal
  background color-palette-purple
  -webkit-font-smoothing antialiased

a
  color color-palette-gray
  text-decoration none

.alm-body

  @media screen and (min-width: min-desktop-width)
    width body-desktop-width
    margin auto

.alm-main-content
  background rgba(255, 255, 255, 0.05)

.alm-main-content--with-contrast
  background white

.alm-author-avatar
  width size-medium
  height @width
  border-radius 50%
  background #ccc

.alm-author-avatar--size-big
  width size-big
  height @width