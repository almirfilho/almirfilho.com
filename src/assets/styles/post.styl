header-image-height = 260px

text(fontsize)
  font-size fontsize
  line-height 200%
  margin (size-smaller / @font-size) 0

// .alm-post
.alm-post--header
  position relative

.alm-post--header-image-box
  // position absolute
  position relative
  width 100%
  height header-image-height
  overflow hidden
  z-index 0
  transition height 0.8s ease

  &:hover
    transition height 1.2s ease
    height header-image-height * scale

    .alm-post--header-image
      transition -webkit-transform 0.8s ease
      -webkit-transform s('translateY(calc(' + (header-image-height * scale / 2) + ' - 50%))')

    .alm-post--header-image--is-end-top
      -webkit-transform none

    .alm-post--header-image--is-end-bottom
      -webkit-transform s('translateY(calc(' + (header-image-height * scale) + ' - 100%))')

.alm-post--header-image
  position absolute
  width 100%
  transition -webkit-transform 1.2s ease
  -webkit-transform s('translateY(calc(' + (header-image-height / 2) + ' - 50%))')

.alm-post--header-image--is-ini-top
  -webkit-transform none

.alm-post--header-image--is-ini-bottom
  -webkit-transform s('translateY(calc(' + header-image-height + ' - 100%))')

.alm-post--header-image-description
  margin 1em size-smallest size-smallest size-smallest
  font-size 1.4em
  line-height 170%
  color color-palette-blue

  @media screen and (min-width: min-tablet-width)
    margin 1em size-big size-smallest size-big

.alm-post--title
  position relative
  // display flex
  height 100%
  font-size 3.8em
  text-transform uppercase
  z-index 100
  background linear-gradient(transparent 50%, white)

.alm-post--title-link
  // position relative
  display flex
  width 100%
  height 100%
  // font-size 37px
  // top -20px
  // margin auto
  color white
  // text-transform uppercase

.alm-post--title-str
  position relative
  top -0.3em
  margin auto

.alm-post--info
  position relative
  margin-top -32px
  z-index 200
  font-family fonts-serif-italic
  font-style italic
  text-align center
  color color-palette-purple

.alm-post--info-description
  display inline-block
  width 8.5em
  font-size 1.3em
  vertical-align 2em

.alm-post--info-description--is-left
  text-align right

.alm-post--info-description--is-right
  text-align left

// .alm-post--time
.alm-post--author-image
  display inline-block
  width size-medium
  height @width
  margin 0 size-smallest
  border-radius 50%
  background #ccc

// .alm-post--author-name
.alm-post--hr
  height 13px
  border none
  text-align center

  &::after
    content '~'
    font-size 8em
    font-family 'Times New Roman', serif
    line-height 0px

.alm-post--content
  padding size-smaller
  font-family fonts-serif-normal
  color color-palette-purple

  @media screen and (min-width: min-tablet-width)
    padding size-medium

  a
    color color-palette-green
    border-bottom 1px dotted @color

    &:hover
      color color-palette-blue

  strong
    font-family fonts-serif-bold
    letter-spacing -0.05em

  em
    font-family fonts-serif-italic

  p
    text(1.6em)

    &:first-child
      margin-top 0

  ul, ol
    text(1.4em)
    list-style-position inside

  h2, h3, h4
    letter-spacing -0.05em
    font-family fonts-serif-bold
    margin-top size-smallest
    color rgba(color-palette-purple, 0.8)

  h2
    font-size size-small * 0.8

  h3
    font-size size-smaller * 1.1

  h4
    font-size size-smallest * 1.1
    text-transform uppercase

  abbr
    font-size 0.75em
    font-family fonts-serif-bold
    color rgba(color-palette-purple, 0.5)
    border-bottom 1px dashed rgba(color-palette-purple, 0.4)
