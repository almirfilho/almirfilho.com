// Vars ------------------------------------------------------------------------

post-text-size = 2em
post-text-color-primary = color-palette-purple
post-text-color-secondary = rgba(post-text-color-primary, 0.5)
post-text-line-height = 170%
post-text-padding--desktop = main-content-padding--desktop
post-text-padding--mobile = main-content-padding--mobile

// Components ------------------------------------------------------------------

@import 'post/header'
@import 'post/title'
@import 'post/info'
@import 'post/image'

// Post content ----------------------------------------------------------------

.alm-post-content
  padding post-text-padding--mobile
  font-family fonts-serif-normal
  color post-text-color-primary

  @media screen and (min-width: min-tablet-width)
    padding post-text-padding--desktop
    padding-top size-small

  hr
    hr()
    opacity 1
    margin size-small

    &::after
      color color-palette-gray


  // Post content Components ---------------------------------------------------

  @import 'post/headline'
  @import 'post/text'
  @import 'post/blockquote'
